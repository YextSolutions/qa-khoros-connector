{
  "$id": "khoros_conversationsConnector",
  "$schema": "https://schema.yext.com/config/km/connector/v2",
  "displayName": "Khoros Conversations Connector",
  "entityType": "khoros_conversation",
  "source": {
    "sourceConfig": {
      "apiPushConfig": {
        "app": "61666",
        "dataFormat": "JSON"
      }
    },
    "baseSelector": {
      "type": "JSON",
      "header": "Entity Container",
      "path": "conversations"
    },
    "selectors": [
      {
        "type": "JSON",
        "header": "Conversation ID",
        "path": "conversation.id"
      },
      {
        "type": "JSON",
        "header": "Name",
        "path": "subject"
      },
      {
        "type": "JSON",
        "header": "Khoros Discussion Landing Page",
        "path": "conversation.view_href"
      },
      {
        "type": "JSON",
        "header": "Conversation Style",
        "path": "conversation.style"
      },
      {
        "type": "JSON",
        "header": "Khoros Topic",
        "path": "first_message"
      },
      {
        "type": "JSON",
        "header": "Board",
        "path": "board.id"
      },
      {
        "type": "JSON",
        "header": "Khoros Discussion Thread",
        "path": "discussion_thread"
      },
      {
        "type": "JSON",
        "header": "Last Post Time",
        "path": "conversation.last_post_time"
      },
      {
        "type": "JSON",
        "header": "Message Count",
        "path": "conversation.message_count"
      },
      {
        "type": "JSON",
        "header": "Khoros Solution",
        "path": "solution"
      },
      {
        "type": "JSON",
        "header": "Solved",
        "path": "solved"
      }
    ]
  },
  "mappings": [
    {
      "field": "entityId",
      "header": "Conversation ID",
      "subfieldPath": []
    },
    {
      "field": "name",
      "header": "Name",
      "subfieldPath": []
    },
    {
      "field": "khoros_discussionLandingPage",
      "header": "Khoros Discussion Landing Page",
      "subfieldPath": []
    },
    {
      "field": "khoros_discussionStyle",
      "header": "Conversation Style",
      "subfieldPath": []
    },
    {
      "field": "khoros_firstKhorosMessage",
      "header": "Khoros Topic",
      "subfieldPath": []
    },
    {
      "field": "khoros_board",
      "header": "Board",
      "subfieldPath": []
    },
    {
      "field": "khoros_discussionThread",
      "header": "Khoros Discussion Thread",
      "subfieldPath": []
    },
    {
      "field": "khoros_lastPostTime",
      "header": "Last Post Time",
      "subfieldPath": []
    },
    {
      "field": "khoros_messageCount",
      "header": "Message Count",
      "subfieldPath": []
    },
    {
      "field": "khoros_solution",
      "header": "Khoros Solution",
      "subfieldPath": []
    },
    {
      "field": "khoros_solved",
      "header": "Solved",
      "subfieldPath": []
    }
  ],
  "scheduleConfig": {
    "useSourceSchedule": true,
    "runMode": "DEFAULT"
  }
}