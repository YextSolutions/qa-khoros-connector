{
  "$id": "khoros_categoriesConnector",
  "$schema": "https://schema.yext.com/config/km/connector/v3",
  "displayName": "Khoros Categories Connector",
  "entityType": "khoros_category",
  "source": {
    "sourceConfig": {
      "apiPushConfig": {
        "dataFormat": "JSON",
        "enabled": true
      }
    },
    "baseSelector": {
      "type": "JSON",
      "header": "Entity Container",
      "path": "categories"
    },
    "selectors": [
      {
        "type": "JSON",
        "header": "Entity ID",
        "path": "id"
      },
      {
        "type": "JSON",
        "header": "Name",
        "path": "title"
      },
      {
        "type": "JSON",
        "header": "Views",
        "path": "views"
      },
      {
        "type": "JSON",
        "header": "Landing Page",
        "path": "view_href"
      },
      {
        "type": "JSON",
        "header": "Description",
        "path": "description"
      },
      {
        "type": "JSON",
        "header": "Depth",
        "path": "depth"
      },
      {
        "type": "JSON",
        "header": "Creation Date",
        "path": "creation_date"
      }
    ]
  },
  "transforms": [
    {
      "formatDates": {
        "inputHeaders": {
          "headers": [
            "Creation Date"
          ]
        },
        "inputFormat": "yyyy-MM-dd\u0027T\u0027HH:mm:ss.SSSXXX"
      }
    },
    {
      "addColumn": {
        "newColumnHeader": "Entity ID Prefix",
        "columnValue": "khorosCategory_"
      }
    },
    {
      "mergeColumns": {
        "inputHeaders": [
          "Entity ID Prefix",
          "Entity ID"
        ],
        "newColumnHeader": "Global Entity ID",
        "delimiter": ""
      }
    }
  ],
  "mappings": [
    {
      "field": "datePosted",
      "header": "Creation Date",
      "subfieldPath": []
    },
    {
      "field": "khoros_views",
      "header": "Views",
      "subfieldPath": []
    },
    {
      "field": "description",
      "header": "Description",
      "subfieldPath": []
    },
    {
      "field": "landingPageUrl",
      "header": "Landing Page",
      "subfieldPath": []
    },
    {
      "field": "khoros_depth",
      "header": "Depth",
      "subfieldPath": []
    },
    {
      "field": "name",
      "header": "Name",
      "subfieldPath": []
    },
    {
      "field": "entityId",
      "header": "Global Entity ID",
      "subfieldPath": []
    }
  ]
}