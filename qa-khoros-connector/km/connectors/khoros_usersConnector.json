{
  "$id": "khoros_usersConnector",
  "$schema": "https://schema.yext.com/config/km/connector/v3",
  "displayName": "Khoros Users Connector",
  "entityType": "khoros_user",
  "source": {
    "sourceConfig": {
      "apiPushConfig": {
        "dataFormat": "JSON",
        "enabled": true
      }
    },
    "baseSelector": {
      "type": "JSON",
      "header": "Entity Container",
      "path": "users"
    },
    "selectors": [
      {
        "type": "JSON",
        "header": "Entity ID",
        "path": "id"
      },
      {
        "type": "JSON",
        "header": "Name",
        "path": "login"
      },
      {
        "type": "JSON",
        "header": "Email",
        "path": "email"
      },
      {
        "type": "JSON",
        "header": "Landing Page",
        "path": "view_href"
      },
      {
        "type": "JSON",
        "header": "First Name",
        "path": "first_name"
      },
      {
        "type": "JSON",
        "header": "Last Name",
        "path": "last_name"
      }
    ]
  },
  "transforms": [
    {
      "addColumn": {
        "newColumnHeader": "Entity ID Prefix",
        "columnValue": "khorosUser_"
      }
    },
    {
      "mergeColumns": {
        "inputHeaders": [
          "Entity ID Prefix",
          "Entity ID"
        ],
        "newColumnHeader": "Global Entity ID",
        "delimiter": ""
      }
    }
  ],
  "mappings": [
    {
      "field": "emails",
      "header": "Email",
      "subfieldPath": []
    },
    {
      "field": "firstName",
      "header": "First Name",
      "subfieldPath": []
    },
    {
      "field": "landingPageUrl",
      "header": "Landing Page",
      "subfieldPath": []
    },
    {
      "field": "lastName",
      "header": "Last Name",
      "subfieldPath": []
    },
    {
      "field": "name",
      "header": "Name",
      "subfieldPath": []
    },
    {
      "field": "entityId",
      "header": "Global Entity ID",
      "subfieldPath": []
    }
  ]
}